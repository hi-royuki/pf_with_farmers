<!DOCTYPE html>
<html>
  <head>
    <title>WithFarmers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <!--イメージ入れる-->
          <a class="navbar-brand p-3" href="/"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if farmer_user_signed_in? %>
            <li class="nav-item">
              <%= link_to '投稿一覧', farmer_users_posts_path, class: 'nav-link text-dark' %>
            </li>
           <li class="nav-item">
              <%= link_to 'イベント一覧', farmer_users_posts_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'マイページ', farmer_users_posts_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_farmer_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>

            <% else %>
            <li class="nav-item">
              <%= link_to "トップ", root_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "About", home_about_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", home_choice_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "農家ユーザーログイン", new_farmer_user_session_path, class: 'nav-link text-dark' %>
            </li>
             <li class="nav-item">
              <%= link_to "一般ユーザーログイン", new_general_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
