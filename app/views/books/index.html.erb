<!--農業日記一覧-->
<% if farmer_user_signed_in? %>
 <%= link_to "投稿する", new_book_path %>
<% @book.each do |post| %>
<div>
  <%= link_to farmer_users_post_path(post.id) do %>
  <%= attachment_image_tag post, :image %>
  <% end %>
  <p>タイトル:<%= post.title %></p>
  <p>日記:<%= post.introduction %></p>
  <p>ユーザーネーム:<%= post.farmer_user.name %></p>

</div>
<% end %>

<% else general_user_signed_in? %>
<% @book.each do |post| %>
<div>
  <%= link_to farmer_users_post_path(post.id) do %>
  <%= attachment_image_tag post, :image %>
  <% end %>
  <p>タイトル:<%= post.title %></p>
  <p>日記:<%= post.introduction %></p>
  <p>ユーザーネーム:<%= post.farmer_user.name %></p>

</div>
<% end %>
<% end %>
