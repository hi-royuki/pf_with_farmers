<!--農業日記一覧-->
<div class="container px-5 px-sm-0">
  <div class="row">
      <!--農家投稿機能-->
      <div class="card" style="width: 20rem;">
          <div class="card-body">
              <!--ここからエラーメッセージ-->
        <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました。入力を確認してください。
        <% end %>
        <!--ここまで-->

          <h1 class="card-title text-white p-3 mb-0", style="background-color: #21A937;"><strong>農業日記投稿</strong></h1>
          <%= form_with model: @post, url: farmer_users_posts_path, local:true do |f| %>
          <div class="card-title">
              <label for="book_title">画像<i class="fas fa-image"></i></label>
              <%= f.attachment_field :image %>
          </div>
          <div class="card-title">
              <label for="book_opinion">タイトル<i class="fas fa-flag"></i></label>
              <%= f.text_field :title, class:"form-control" %>
          </div>
           <div class="card-title">
              <label for="book_opinion">日記<i class="fas fa-book"></i></label>
              <%= f.text_area :introduction , class:"form-control" %>

           </div>
           <div class="card-title">
              <%= f.submit '投稿', class: "btn btn-success" %>
              </div>
           <% end %>
          </div>
      </div>

<%= render 'farmer_users/posts/list', posts: @posts %>
  </div>
</div>


