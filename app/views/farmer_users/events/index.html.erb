<!--農業日記一覧-->
 <%= link_to "投稿する", new_farmer_users_event_path %>
 <%= link_to "イベントリクエスト履歴一覧", farmer_users_event_joins_path(@event) %>
 <p><%= link_to "イベント参加者リスト",  confirm_farmer_users_events_path %></p>
<% @event.each do |event| %>
<div>
  <%= link_to farmer_users_event_path(event.id) do %>

  <%= attachment_image_tag event, :event_image %>
  <% end %>

  <p>イベント名:<%= event.title %></p>
  <p>日時:<%= event.event_date %></p>
  <p>参加費:￥<%= event.price %></p>
  <p>内容：<%= event.introduction %></p>
   <p>ユーザーネーム：<%= event.farmer_user.name %></p>
</div>
<% end %>