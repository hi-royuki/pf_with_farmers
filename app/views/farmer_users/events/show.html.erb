<!--投稿詳細ページ-->
<div class="card w-50 mx-auto mt-4 shadow-lg">

  <div class="card-wrap">
    <div class="d-flex bd-highlight">
      <div class="p-2 flex-grow-1 bd-highlight">
        <%= link_to farmer_users_customer_path(@event.farmer_user) do %>
         <%= attachment_image_tag @event.farmer_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "circle" %><%= @event.farmer_user.name %>
        <% end %>
      </div>
      <div class="p-2 bd-highlight">
        <i class="far fa-clock"><%= @event.created_at.strftime('%Y/%m/%d') %></i>
      </div>
      <div class="p-2 bd-highlight">
         <% if @event.farmer_user == current_farmer_user %>
          <%= link_to farmer_users_post_path(@event), method: :delete do %>
          <h3 class="text-dark"><i class="far fa-trash-alt"></i></h3>
          <% end %>
         <% end %>
      </div>
    </div>
    <%= attachment_image_tag @event, :event_image, class: "card-img-top" %>
    <div class="card-body">
       <p class="card-title">
         <strong><i class="far fa-flag"></i><span><%= @event.title %></span></strong>
       </p>
       <p class="card-body">
         <%= @event.introduction %>
       </p>
       <h6 class="card-body p-3 border-top d-flex justify-content-center">
          日時:<%= @event.event_date %>
       </h6>
       <h6 class="card-body p-3 border-top border-bottom d-flex justify-content-center">
          参加費:<%= @event.price %>円
        </h6>
        <%= link_to "参加リクエスト", new_farmer_users_event_join_path(@event), class: "btn btn-outline-primary d-flex justify-content-center" %>
        </div>
      </div>
    </div>
  </div>
</div>


