<!--農家ユーザー新規登録-->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">農家ユーザー新規登録画面</h5>
      <div class="form-body p-4">
        <%= form_with model: @farmer_user, url: farmer_user_registration_path, id: 'new_farmer_user', class: 'new_farmer_user', local: true do |f| %>
        <%= render "farmer_users/shared/error_messages", resource: resource %>

        <!--name追加-->
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
          </div>
          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ニックネーム"%>

        </div>

        <!--メールアドレス-->
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
          </div>
          <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
          </div>
          <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
        </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-check-circle"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認" %>
          </div>

          <%= f.submit "農家ユーザーとして新規登録", class:"btn btn-block btn-success mt-5" %>

      <% end %>

      </div>
    </div>
  </div>
</div>


