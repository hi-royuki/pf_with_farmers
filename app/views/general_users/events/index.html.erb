<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-2 mx-auto">
      <% @events.each do |event| %>
      <div class="card-wrap p-3">
        <div class="card" style="width: 36rem;">
          <%= link_to general_users_customer_path(event.farmer_user) do %>
           <%= attachment_image_tag event.farmer_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "circle" %><%= event.farmer_user.name %>
          <% end %>
          <%= link_to general_users_event_path(event.id) do %>
           <%= attachment_image_tag event, :event_image, :fill, 574, 574 %>
          <% end %>
          <div class="card-body">
            <p class="card-title">
              <strong><i class="far fa-flag"></i><span><%= event.title %></span></strong>
            </p>
            <p class="card-body">
              <%= event.introduction %>
            </p>
          </div>
        </div>

      </div>
      <% end %>
    </div>
  </div>
</div>

