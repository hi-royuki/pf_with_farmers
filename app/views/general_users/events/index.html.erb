<div class="container">
    <%= link_to "農業体験リクエスト履歴一覧", general_users_event_joins_path(@events), class: "btn btn-success " %>
    <%= form_with url: search_general_users_events_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword,placeholder:"キーワドを入力してください" %>
    <%= f.submit "検索", class: "btn btn-outline-secondary" %>
  <% end %>
</div>


  <% @events.each do |event| %>
<div class="container">
<div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-wrap">
      <div class="d-flex bd-highlight">
        <div class="p-2 flex-grow-1 bd-highlight">
          <%= link_to general_users_customer_path(event.farmer_user) do %>
           <%= attachment_image_tag event.farmer_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", class: "circle" %><%= event.farmer_user.name %>
          <% end %>
        </div>
          <div class="p-2 bd-highlight">
           <i class="far fa-clock"><%= event.created_at.strftime('%Y/%m/%d') %></i>
          </div>
        </div>
          <%= link_to general_users_event_path(event.id) do %>
           <%= attachment_image_tag event, :event_image, class:"card-img-top"; %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-10">
                <p card="card-title">
                  <strong><i class="far fa-flag"></i><span><%= event.title %></span></strong>
                </p>
                <div class="d-flex bd-highlight">
                 <div class="p-2 flex-grow-1 bd-highlight">
                  <p class="card-text">
                   <%= event.introduction %>
                 </div>
            </div>
                </p>
          </div>
        </div>

      </div>

    </div>
  </div>
  <% end %>
</div>

