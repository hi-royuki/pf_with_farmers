<div class="container">
 <%= form_with model:@general_user, url:general_users_users_path, local:true do |f| %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>プロフィール編集</h2>

        <div class="form-group">

          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"ニックネーム" %>
        </div>
         <%= attachment_image_tag @general_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
       　<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

        <div class="form-group">
          <%= f.text_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.submit "保存", class:"btn btn-secondary" %>
        </div>
        <div class="form-group">
        <%= link_to "退会する",  unsubscribe_general_users_users_path(@general_user), class: "btn btn-danger" %>
        </div>
    </div>
  </div>
</div>

<% end %>